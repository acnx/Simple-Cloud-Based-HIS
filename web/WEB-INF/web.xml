<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <servlet>
        <servlet-name>data</servlet-name>
        <servlet-class>com.demo.web.PutDataWeb</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>data</servlet-name>
        <url-pattern>/putData</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.demo.web.RegisterWeb</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>encoding</filter-name>
        <filter-class>com.demo.web.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>encoding</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>getRegister</servlet-name>
        <servlet-class>com.demo.web.GetRegisterWeb</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getRegister</servlet-name>
        <url-pattern>/getRegister</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>tui</servlet-name>
        <servlet-class>com.demo.web.TuiWeb</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>tui</servlet-name>
        <url-pattern>/tui</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>tuihao</servlet-name>
        <servlet-class>com.demo.web.TuiHaoWeb</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>tuihao</servlet-name>
        <url-pattern>/tuihao</url-pattern>
    </servlet-mapping>

</web-app>